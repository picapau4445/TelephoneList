<?xml version="1.0" encoding="utf-8"?>            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"                android:id="@+id/linearLayout"                android:layout_width="wrap_content"                android:layout_height="120dip"                android:orientation="horizontal"                android:focusable="true"                 >
                <ImageView                    android:id="@+id/imageIcon"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_horizontal|center"                     android:src="@drawable/screen_background_dark" />
                <LinearLayout                    android:id="@+id/Layout_Profile"                    android:layout_width="fill_parent"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:orientation="vertical"                    >
                    <TextView                        android:id="@+id/Text_ID"                        android:layout_width="0dip"                        android:layout_height="0dip"                        android:focusable="false"                        android:text="ID"                        android:textSize="0dip"                         />                    <TextView                        android:id="@+id/TextType"                        android:layout_width="fill_parent"                        android:layout_height="wrap_content"                        android:focusable="false"                        android:textSize="10dip"                        android:padding="1dip"                        android:ellipsize="end"/>                    <TextView                        android:id="@+id/TextNAME"                        android:layout_width="fill_parent"                        android:layout_height="wrap_content"                        android:background="@color/list_item"                        android:focusable="false"                        android:padding="1dip"                        android:textSize="20dip"                                                android:ellipsize="none"/>
                </LinearLayout>
            </LinearLayout>